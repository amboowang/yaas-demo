{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Wishlist Item",
  "type" : "object",
  "properties":
  {
    "product":
    {
      "type":"string",
      "pattern":"^.+"
    },
    "amount":
    {
      "type":"number",
      "minimum":0,
      "default":0
    },
    "note":
    {
      "type":"string"
    },
    "createdAt":
    {
      "type":"string",
      "format":"date-time"
    }
  },
  "required":["product", "amount"]
}
